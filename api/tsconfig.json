{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": [
      "es6"
    ]
  },
  "include": [
    "src"
  ],
  "exclude":[
    "node_modules"
  ]
}
